<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <Button
            android:id="@+id/btnSettings"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="SETTINGS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textColor="#FF0000"/>

    <Button
            android:id="@+id/btnStart"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="START"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.377" android:textColor="#FF0000"/>

    <Button
            android:id="@+id/btnQuit"
            android:layout_width="180dp"
            android:layout_height="45dp"
            android:text="Quit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.499"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622" android:textColor="#FF0000"/>

    <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:clickable="false"
            android:text="STUDENT"
            android:textColor="#FF0000"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.361"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:id="@+id/txtTitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:clickable="false"
            android:text="habits"
            android:textColor="#A5A5A5"
            android:textSize="48sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/btnStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.668"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/txtCreditsAS_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Schmider"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuit" app:layout_constraintHorizontal_bias="0.55"/>
    <TextView
            android:id="@+id/txtCreditsTS_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timo"
            android:textColor="#FF0000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsJK_red" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.477"/>
    <TextView
            android:id="@+id/txtCreditsJK_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kaltenmark"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsAS_red" android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/txtCreditsJK_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Janick"
            android:textColor="#FF0000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsAS_red" android:layout_marginTop="4dp"/>
    <TextView
            android:id="@+id/txtCreditsAS_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:text="Andreas"
            android:textColor="#FF0000"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnQuit" app:layout_constraintHorizontal_bias="0.461"/>
    <TextView
            android:id="@+id/txtCreditsTS_red2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steidinger"
            android:textColor="#A5A5A5"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCreditsJK_red" android:layout_marginTop="4dp"
            app:layout_constraintHorizontal_bias="0.554"/>

</androidx.constraintlayout.widget.ConstraintLayout>